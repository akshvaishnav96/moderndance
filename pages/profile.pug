    <div class="profilefm">
        <form action="/profile" method="post" >
                <div class="mb-3">
                    <label for="exampleInputName" class="form-label">Your Name</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder= "#{name}" name="name" onblur = "contactvalue(this)" required>
                </div>
                <div class="mb-3">
                    <label for="exampleInputAge" class="form-label">Your Age</label>
                    <input type="number" class="form-control" id="ageval" aria-describedby="emailHelp" placeholder="#{age}" name="age" size="4" maxlength="3" onchange="changeHandler()" onblur = "contactvalue(this)" required>
                </div>    
                <div class="mb-3">
                    <label for="exampleInputEmail" class="form-label"> Your Email address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="#{email}" name="email"  onblur = "contactvalue(this)" required>
                    <div id="emailHelp" class="form-text">Changing Email Gonna Impact your login.</div>
                </div>
                <div class="mb-3">
                    <label for="exampleInputNumber" class="form-label">Your Mobile</label>
                    <input type="number" class="form-control" id="mobile" aria-describedby="emailHelp" placeholder="#{mobile}" name="mobile"  onblur = "contactvalue(this)" required> 
                </div>
                <div class="profileupd">
                    <button class="update lgout" id="update" type=submit>Update Details</button>
                    <a href="/logoutall" class="lgout">Log Out All The Devices</a>
                </div>
        </form>
